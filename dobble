import random

# Liste des 24 unités de mesure
units = [
    "1 mm", "10 mm", "100 mm", "1000 mm", "1 cm", "10 cm", "100 cm", "1 m", "10 m", "100 m", 
    "1000 m", "1 km", "5 mm", "50 mm", "500 mm", "5000 mm", "5 cm", "50 cm", "500 cm", "5 m", 
    "50 m", "500 m", "5000 m", "5 km"
]

# Fonction pour vérifier si deux cartes partagent exactement un seul élément
def check_single_common_element(card1, card2):
    common_elements = set(card1) & set(card2)
    return len(common_elements) == 1

# Fonction pour générer le jeu de cartes Dobble
def generate_dobble_game(units, num_cards):
    cards = []
    
    # Générer la première carte
    first_card = random.sample(units, 6)
    cards.append(first_card)
    
    # Générer les autres cartes en respectant la règle
    while len(cards) < num_cards:
        new_card = random.sample(units, 6)
        # Vérifier qu'il y a exactement un élément commun avec chaque carte existante
        valid_card = True
        for card in cards:
            if not check_single_common_element(new_card, card):
                valid_card = False
                break
        if valid_card:
            cards.append(new_card)
    
    return cards

# Générer le jeu de 30 cartes
cards = generate_dobble_game(units, 30)

# Afficher le jeu de cartes généré
for i, card in enumerate(cards, 1):
    print(f"Carte {i}: {', '.join(card)}")
